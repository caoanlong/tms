$color-1 = #fff
$color-2 = #409eff
$color-3 = #333
$color-4 = #f3f7fa
$color-5 = #7eaad7
$color-6 = #e2ecf6
$color-7 = #e6edf8
$color-8 = rgba(0,0,0,.1)
$color-9 = #3582d0
$color-10 = #666
$color-11 = #606266
$color-12 = #dcdfe6
$color-13 = #469dfb
$color-14 = #78c618
$color-15 = #449d44
$color-16 = #f87229
$color-17 = #ec971f
$color-18 = #f74370
$color-19 = #c9302c
$color-20 = #c6e2ff
$color-21 = #ecf5ff
$color-22 = #3a8ee6

@charset "UTF-8"

#app
    height 100%
.top-bar
    .el-menu--horizontal
        border none

    .el-dropdown
        color $color-1

.tags-view-container
    .tags-view-wrapper
        border none
.el-menu-item
    &.is-active
        color $color-1
        background $color-2!important

.el-menu-item-group__title
    padding 0

.el-menu-item-group
    li
        background $color-3!important

.table
    .el-table
        th
            &.is-leaf
                border-color $color-6

        td
            border-color $color-6

    .el-table--striped
        .el-table__body
            tr
                &.el-table__row--striped
                    td
                        background $color-4

.el-submenu__icon-arrow
    margin-top -5px

.wf-card
    padding 10px
    background $color-1
    box-shadow 0 2px 12px 0 $color-8

    .header
        background $color-6
        height 50px
        line-height 50px
        padding 0 15px
        color $color-9
        position relative
        margin-bottom 20px

.wf-table
    background $color-6
    border-spacing 1px
    width 100%
    margin-bottom 10px
    font-size 14px

    caption
        height 40px
        line-height 40px
        text-align left
        background $color-6
        color $color-9
        font-weight bold
        padding 0 15px

    .labels
        color $color-9

.wf-table th
.wf-table td
    background $color-1
    padding 6px 10px
    height 36px
    line-height 24px
    color $color-10

.wf-table th
.wf-table .total td
    background $color-4
    color $color-5

.is-center
    text-align center

.wf-footer
    margin-top 10px

.btn-group
    .wf-btn
        float left

        +.wf-btn
            margin-left 10px

.wf-btn
    height 34px
    padding 0 12px
    border-width 1px
    border-style solid
    outline none
    font-size 14px
    cursor pointer

    .svg-icon
        margin-right 5px

.btn-default
    color $color-11
    background $color-1
    border-color $color-12

    &:hover
        color $color-13
        background-color $color-6
        border-color $color-13

.btn-default:focus
.btn-default.focus
    color $color-13
    background-color $color-6
    border-color $color-13

.btn-primary
    color $color-1
    background $color-13
    border-color $color-13

.btn-primary:focus
.btn-primary.focus
.plain.btn-primary:focus
.plain.btn-primary.focus
    color $color-1
    background-color $color-9
    border-color $color-9

.btn-primary:hover
.plain.btn-primary:hover
    color $color-1
    background-color $color-9
    border-color $color-9

.btn-success
    color $color-1
    background $color-14
    border-color $color-14

.btn-success:focus
.btn-success.focus
.plain.btn-success:focus
.plain.btn-success.focus
    color $color-1
    background-color $color-15
    border-color $color-15

.btn-success:hover
.plain.btn-success:hover
    color $color-1
    background-color $color-15
    border-color $color-15

.btn-warning
    color $color-1
    background $color-16
    border-color $color-16

.btn-warning:focus
.btn-warning.focus
.plain.btn-warning:focus
.plain.btn-warning.focus
    color $color-1
    background-color $color-17
    border-color $color-17

.btn-warning:hover
.plain.btn-warning:hover
    color $color-1
    background-color $color-17
    border-color $color-17

.btn-danger
    color $color-1
    background $color-18
    border-color $color-18

.btn-danger:focus
.btn-danger.focus
.plain.btn-danger:focus
.plain.btn-danger.focus
    color $color-1
    background-color $color-19
    border-color $color-19

.btn-danger:hover
.plain.btn-danger:hover
    color $color-1
    background-color $color-19
    border-color $color-19

.plain
    &.btn-primary
        color $color-13
        background $color-1
        border-color $color-13

    &.btn-success
        color $color-14
        background $color-1
        border-color $color-14

    &.btn-warning
        color $color-16
        background $color-1
        border-color $color-16

    &.btn-danger
        color $color-18
        background $color-1
        border-color $color-18

.distpicker.normal
.distpicker.normal .level
    display inline-block

.download-btn
    font-size 12px
    color $color-11
    height 29px
    line-height 27px
    padding 0 15px
    border 1px solid $color-12
    border-radius 3px
    background $color-1
    margin 0 10px 0 0
    display inline-block
    vertical-align top

    &:hover
        border-color $color-20
        color $color-2
        background $color-21

    &:active
        border-color $color-22
        color $color-22

.fare
    .el-input
        input
            text-align center

.ViewPhotosDialog
    .el-dialog__header
        border-bottom 1px solid $color-12

    .el-dialog__body
        padding-top 0

.wfCheck
    width 20px
    height 14px
    padding 0 3px

    span
        position relative
        margin 0 auto

    .checkbox
        position absolute
        width 14px
        height 14px
        z-index 1
        left 0
        top 0
        opacity 0

        +label
            display block
            width 14px
            height 14px
            position absolute
            left 0
            top 0
            z-index 0
            background url(../imgs/checkbox.png) no-repeat 0 0

        &:hover
            +label
                background-position -14px 0

        &:checked
            +label
                background-position -28px 0

.viewPicDetail
    width 540px
    padding-bottom 0

    .el-dialog__footer
        text-align center
        padding 10px

    .el-message-box__btns
        padding 0

.agreementDialog
    width 60%
    background $color-1
    border-radius 8px
    overflow hidden

    .el-message-box__header
        height 50px
        line-height 50px
        text-align center

    .el-message-box__btns
        text-align center
        padding-top 15px

        button
            margin 0

    .el-message-box__content
        height 600px
        overflow-y auto
        color $color-10
        padding-bottom 20px
        line-height 24px
.section-block
	margin 10px
	border 1px solid #bfcbd9
	.block-title
        position relative
        top -10px
        left 10px
        padding 0 10px
        color #bfcbd9
        background-color $color-1
    .block-content
        margin 0 20px

.companyInfoDialog
    width 660px
    border-radius 4px
    overflow hidden
    .el-dialog__header
    .el-dialog__body
        padding 0
    
    .el-dialog__headerbtn 
        z-index 10
        .el-dialog__close
            color $color-1
.editCompanyInfoDialog
.accountInfoDialog
    .el-dialog__body
        border-top 1px solid #ddd
.accountInfoDialog
    width 660px
    border-radius 4px
    overflow hidden
    .el-tabs__header
        &.is-left
            margin-right 0
    .el-dialog__body
        padding 0 0 30px
        .el-tabs__content
            width 565px
            padding 20px
.expirewarnPop
    max-width 260px
    padding-bottom 5px
    .el-tag
        margin 0 5px 5px 0
        display block
        float left
        
    